<div class="container padding-top">
    <header>
        <div class="display-flex-element">
            <h1>Point Estimate</h1>
            <button class="margin-top btn btn-outline-secondary btn-lg" onclick="reset()">Reset Board</button>
        </div>
    </header>
</div>

<div class="container">
    <div class="score-session">
        <input id="input_username" class="margin-bottom score-input" autocomplete="off" placeholder="Input your name" />
        <button class="btn btn-outline-secondary btn-lg" onclick="enterRoom()">Enter</button>
    </div>
</div>

<div class="container">
    <div class="score-session">
        <input id="input" class="margin-bottom score-input" autocomplete="off" />
        <button class="btn btn-outline-secondary btn-lg" onclick="submit_answer()">Send Answer</button>
    </div>
</div>

<div class="container">
    <h2>Participant</h2>
    <div id="members" class="row"></div>
    <h2>Answer Ranking</h2>

    <ol>
        <div id="ranking"></div>
    </ol>
</div>